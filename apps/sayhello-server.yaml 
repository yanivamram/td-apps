apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: sayhello-server
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/your-org/td-gitops.git  # ← Replace with your actual repo
    targetRevision: HEAD
    path: sayhello-server
  destination:
    server: https://kubernetes.default.svc
    namespace: default  # ← You can change this if you prefer another namespace
  syncPolicy:
    automated:
      selfHeal: true
      prune: true